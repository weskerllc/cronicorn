{
  "name": "cronicorn",
  "packageManager": "pnpm@10.17.1",
  "author": "",
  "type": "module",
  "license": "FSL-1.1-MIT",
  "keywords": [],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "version": "1.3.0",
  "scripts": {
    "ðŸš€ ---------- MONOREPO ----------": "",
    "build": "tsc -b",
    "build:web": "pnpm --filter @cronicorn/web run build",
    "start": "dotenv -e .env -- pnpm run -r --parallel start",
    "dev": "dotenv -e .env -- pnpm run -r --parallel dev",
    "dev:api": "dotenv -e .env -- pnpm --filter @cronicorn/api run dev",
    "dev:web": "dotenv -e .env -- pnpm --filter @cronicorn/web run dev",
    "dev:scheduler": "dotenv -e .env -- pnpm --filter @cronicorn/scheduler-app run dev",
    "watch": "dotenv -e .env -- tsc -b -w",
    "ðŸš€ ---------- QUALITY ----------": "",
    "test": "dotenv -e .env vitest run",
    "test:coverage": "dotenv -e .env vitest run --coverage",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "lint:web": "pnpm -F @cronicorn/web lint --fix",
    "sim": "pnpm run -r --parallel sim",
    "ðŸš€ ---------- VERSIONING ----------": "",
    "release": "semantic-release",
    "ðŸš€ ---------- UTILS ----------": "",
    "clean": "pnpm -r exec rimraf dist coverage node_modules tsconfig.tsbuildinfo && rimraf node_modules .eslintcache",
    "ðŸš€ ---------- DATABASE ----------": "",
    "db": "docker compose -f docker-compose.dev.yml up -d",
    "db:reset": "docker compose down -v && pnpm db",
    "db:migrate": "dotenv -e .env -- pnpm run -r --parallel migrate",
    "generate": "dotenv -e .env -- pnpm run -r --parallel generate",
    "studio": "dotenv -e .env -- pnpm run -r --parallel studio",
    "ðŸš€ ---------- SCENARIOS ----------": "",
    "scenarios": "dotenv -e .env -- pnpm --filter @cronicorn/scenarios scenarios",
    "ðŸš€ ---------- DOCKER ----------": "",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker compose --env-file .env.production up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "@antfu/eslint-config": "~3.12.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@tanstack/eslint-config": "^0.3.2",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "~3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "~9.31.0",
    "eslint-plugin-format": "~0.1.3",
    "eslint-plugin-jsonc": "^2.21.0",
    "rimraf": "^6.1.0",
    "semantic-release": "^25.0.1",
    "stripe": "^14.25.0",
    "tsx": "^4.20.6",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
